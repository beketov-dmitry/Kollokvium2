<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.kollokvium2.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Email:"/>
    <TextField fx:id="emailInput"/>
    <Label fx:id="resultEmail"/>
    <Label text="Date of birthday:"/>
    <TextField fx:id="dateInput"/>
    <Label fx:id="resultDate"/>
    <Label text="Name and Surname:"/>
    <TextField fx:id="NameAndSurnameInput"/>
    <Label fx:id="resultName"/>

    <Button fx:id="validate" text="validate" onAction="#validateAction"/>
</VBox>
